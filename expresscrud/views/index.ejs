<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>show data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <div class="container my-3">
        <h1 class="text-center">Show Data</h1>
        <form action="/chats/new" method="get">
            <button class="btn btn-success">Insert Data</button>
        </form>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Password</th>
                <th scope="col">Handle</th>
              </tr>
            </thead>
            <tbody>
              <% for(let i of chat) { %>
                    <tr>
                        <th scope="row"><%= i.name %></th>
                        <td><%= i.email %></td>
                        <td><%= i.password %></td>
                        <td>
                            <form action="/chats/<%= i.id %>/edit" method="get">
                                <button class="btn btn-primary">Update</button>
                            </form>
                            <form action="/chats/<%= i.id %>/?_method=DELETE" method="post">
                                <button class="btn btn-danger my-2">delete</button>
                            </form>
                        </td>
                      </tr>
              <% } %>
            </tbody>
          </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>

